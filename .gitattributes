# Set the default behavior, in case people don't have core.autocrlf set.
* text=true

# Declare the line endings per file type
*.cpp text eol=crlf
*.h text eol=crlf
*.rc text eol=crlf
*.sln text eol=crlf
*.vcxproj text eol=crlf
*.vcxproj.filters text eol=crlf
*.props text eol=crlf
*.md text eol=crlf
*.sh text eol=lf
